<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ibrasoft.jdriveclonr.ui.AuthController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <Label text="Connect to Google Drive" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Label text="Sign in with your Google account to access your Drive content" style="-fx-font-size: 14px;"/>
    
    <Region prefHeight="20.0"/>
    
    <Button text="Sign in with Google" onAction="#onSignInClicked" styleClass="google-button" id="signInButton"/>
    
    <HBox spacing="10.0" alignment="CENTER">
        <Button text="Back" onAction="#onBackClicked"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>
</VBox>