<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ibrasoft.jdriveclonr.ui.DownloadController"
            prefWidth="700" prefHeight="550"
            style="-fx-background-color: #F9FAFB;">

    <!-- ─────────── TOP (Header) ─────────── -->
    <top>
        <VBox spacing="5.0" BorderPane.alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="12">
                <StackPane>
                    <Rectangle width="36" height="36" arcWidth="8" arcHeight="8" style="-fx-fill: #E8F0FE;"/>
                    <Text text="↓" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #1967D2;"/>
                </StackPane>
                <Text text="Google Drive Downloader" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-fill: #202124;">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Text>
            </HBox>

            <VBox spacing="10.0" VBox.vgrow="NEVER">
                <padding>
                    <Insets top="20"/>
                </padding>

                <HBox spacing="8.0" alignment="CENTER_LEFT">
                    <Label fx:id="overallLabel" text="Preparing downloads…" style="-fx-font-size: 14px; -fx-text-fill: #5F6368;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="percentLabel" text="0%" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #1967D2;"/>
                </HBox>

                <StackPane>
                    <ProgressBar fx:id="overallBar" prefWidth="640" prefHeight="6" style="-fx-accent: #1967D2; -fx-control-inner-background: #E8EAED;"/>
                </StackPane>
            </VBox>
        </VBox>
    </top>

    <!-- ─────────── CENTER (Downloads + Thread Controls) ─────────── -->
    <center>
        <VBox spacing="16" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="24" bottom="16" left="24"/>
            </padding>

            <!-- Thread Control Panel -->
            <HBox spacing="16" alignment="CENTER_LEFT" style="-fx-background-color: #F1F8FF; -fx-background-radius: 8; -fx-border-color: #CCDEF6; -fx-border-radius: 8; -fx-border-width: 1;">
                <padding>
                    <Insets top="16" right="16" bottom="16" left="16"/>
                </padding>

                <Label text="Download Threads:" style="-fx-font-size: 14px; -fx-text-fill: #174EA6;"/>
                <Slider fx:id="threadSlider" min="1" max="16" value="4" blockIncrement="1" majorTickUnit="1" minorTickCount="0" snapToTicks="true"
                        HBox.hgrow="ALWAYS" style="-fx-control-inner-background: #CCDEF6;"/>
                <Label fx:id="threadCountLabel" text="Threads: 4" style="-fx-font-size: 14px; -fx-text-fill: #174EA6; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Download List Header -->
            <HBox alignment="CENTER_LEFT" spacing="5.0">
                <StackPane>
                    <Rectangle width="20" height="20" arcWidth="4" arcHeight="4" style="-fx-fill: #E8F0FE;"/>
                    <Text text="▼" style="-fx-font-size: 10px; -fx-font-weight: bold; -fx-fill: #1967D2;"/>
                </StackPane>
                <Text text="Active Downloads" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #202124;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="threadsCountLabel" text="0 files" style="-fx-font-size: 14px; -fx-text-fill: #5F6368;"/>
            </HBox>

            <!-- Download List -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #E8EAED; -fx-border-radius: 10; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 4, 0, 0, 1);" VBox.vgrow="ALWAYS">
                <ListView fx:id="threadList" VBox.vgrow="ALWAYS"
                          style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-padding: 8; -fx-background-radius: 10; -fx-border-radius: 10;"/>

                <!-- Empty state message -->
                <StackPane fx:id="emptyStatePane" VBox.vgrow="ALWAYS">
                    <Label text="No active downloads" style="-fx-font-size: 14; -fx-text-fill: #80868B; -fx-font-style: italic;"/>
                </StackPane>
            </VBox>
        </VBox>
    </center>

    <!-- ─────────── BOTTOM (Action Buttons) ─────────── -->
    <bottom>
        <HBox spacing="12.0" alignment="CENTER_RIGHT" style="-fx-background-color: #FFFFFF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, -2); -fx-border-color: #E8EAED; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets top="16" right="24" bottom="16" left="24"/>
            </padding>

            <HBox spacing="8" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label text="Download Service v1.0" style="-fx-font-size: 12px; -fx-text-fill: #80868B;"/>
            </HBox>

            <Button fx:id="cancelBtn" text="Cancel Download"
                    style="-fx-background-color: #F1F3F4; -fx-text-fill: #5F6368; -fx-font-size: 13px; -fx-padding: 10 16; -fx-background-radius: 6; -fx-border-color: #DADCE0; -fx-border-radius: 6; -fx-border-width: 1; -fx-cursor: hand;"/>

            <Button fx:id="closeBtn" text="Close" disable="true"
                    style="-fx-background-color: #1967D2; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 10 16; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>
    </bottom>

</BorderPane>