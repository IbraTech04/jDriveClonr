<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="com.ibrasoft.jdriveclonr.ui.DownloadController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="640" prefHeight="420">
    <top>
        <VBox spacing="6" BorderPane.alignment="CENTER">
            <Label fx:id="overallLabel" text="Preparing downloadsâ€¦"/>
            <ProgressBar fx:id="overallBar" prefWidth="620"/>
        </VBox>
    </top>

    <center>
        <ListView fx:id="threadList" BorderPane.alignment="CENTER"/>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" padding="6">
            <Button fx:id="cancelBtn"   text="Cancel"/>
            <Button fx:id="closeBtn"    text="Close" disable="true"/>
        </HBox>
