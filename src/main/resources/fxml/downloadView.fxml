<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ibrasoft.jdriveclonr.ui.DownloadController"
            prefWidth="680" prefHeight="480"
            style="-fx-background-color: #f8f9fa;">

    <!-- ─────────── TOP (Header) ─────────── -->
    <top>
        <VBox spacing="5.0" BorderPane.alignment="CENTER" style="-fx-background-color: #ffffff; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 1);">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Text text="File Download" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1a73e8;"/>

            <VBox spacing="8.0" VBox.vgrow="NEVER">
                <padding>
                    <Insets top="15" right="0" bottom="0" left="0"/>
                </padding>

                <HBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label fx:id="overallLabel" text="Preparing downloads…" style="-fx-font-size: 14px; -fx-text-fill: #5f6368;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="percentLabel" text="0%" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1a73e8;"/>
                </HBox>

                <StackPane>
                    <ProgressBar fx:id="overallBar" prefWidth="640" prefHeight="10" style="-fx-accent: #1a73e8; -fx-control-inner-background: #e8eaed;"/>
                </StackPane>
            </VBox>
        </VBox>
    </top>

    <!-- ─────────── CENTER (Thread List) ─────────── -->
    <center>
        <VBox spacing="0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="5.0">
                <Text text="Downloads" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #202124;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="threadsCountLabel" text="0 files" style="-fx-font-size: 14px; -fx-text-fill: #5f6368;"/>
            </HBox>

            <VBox spacing="0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <ListView fx:id="threadList" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-padding: 5;"/>
            </VBox>
        </VBox>
    </center>

    <!-- ─────────── BOTTOM (Buttons) ─────────── -->
    <bottom>
        <HBox spacing="10.0" alignment="CENTER_RIGHT" style="-fx-background-color: #ffffff; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, -1);">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <Button fx:id="cancelBtn" text="Cancel" style="-fx-background-color: #f1f3f4; -fx-text-fill: #5f6368; -fx-font-size: 14px; -fx-padding: 8 16; -fx-background-radius: 4;"/>
            <Button fx:id="closeBtn" text="Close" disable="true" style="-fx-background-color: #1a73e8; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16; -fx-background-radius: 4;"/>
        </HBox>
    </bottom>

</BorderPane>