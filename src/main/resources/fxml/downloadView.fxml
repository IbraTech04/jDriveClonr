<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="450.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ibrasoft.jdriveclonr.ui.DownloadController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Download Progress" styleClass="title-label">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label fx:id="overallLabel" text="Starting download..." HBox.hgrow="ALWAYS" />
            <Label fx:id="percentLabel" text="0%" styleClass="percent-label" />
        </HBox>

        <ProgressBar fx:id="overallBar" prefHeight="10.0" prefWidth="Infinity" progress="0.0" styleClass="main-progress-bar" />

        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <Label text="Active Downloads:" />
            <Label fx:id="threadsCountLabel" text="0 files" styleClass="threads-label" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="threadCountLabel" text="Threads: 4" />
        </HBox>

        <!-- Thread count slider -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Download Threads:" />
            <Slider fx:id="threadSlider" blockIncrement="1.0" majorTickUnit="1.0" max="8.0" min="1.0" minorTickCount="0" prefWidth="200.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="4.0" />
        </HBox>

        <ListView fx:id="threadList" prefHeight="250.0" prefWidth="Infinity" styleClass="download-list" VBox.vgrow="ALWAYS" />

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button fx:id="cancelBtn" mnemonicParsing="false" text="Cancel" />
            <Button fx:id="closeBtn" defaultButton="true" mnemonicParsing="false" text="Close" />
        </HBox>
    </children>
</VBox>